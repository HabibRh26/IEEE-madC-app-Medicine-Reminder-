<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">



    <EditText
        android:id="@+id/edtTxtMedName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Medication" />



    <TextView
        android:id="@+id/txtVwDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTxtMedName"
        android:layout_centerHorizontal="true" />



    <TextView
    android:id="@+id/txtVwTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtVwDate"
    android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnSetNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtVwTime"
        android:layout_centerHorizontal="true"
        android:text="Set Reminder" />


</RelativeLayout>